

<%- include('../layout/formheader.ejs') %>

<div class="pt-3 pb-5 px-sm-5">
  <div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-4 align-self-center">
          <img src="images/p3.png" class="img-fluid" alt="login_image" />
      </div>
    
      <div class="col-md-4">
        
          <form action="/submitOtp?id=<%=id%>" method="post">
              <div class="form-group">
                  <label for="recipient-name" class="col-form-label">Enter OTP sent to registered email</label>
                  <input type="number" class="form-control" placeholder=" " name="otp" id="recipient-name" required="">
              </div>
              <div class="right-w3l"><br>
                  <input type="submit" class="form-control" value="Verify">
              </div>
          </form>

          <div class="timer text-center">
         
      <div>
         <!-- <form action="/resendOtp?id=<%=id%>" method="post">
                Didn't receive code ? 
                <button type="submit" id="resend">Click to Resend</button>
            </form> -->

            Didn't receive code ? 
            <a href="/resendOtp?id=<%=id%>" id="resend"> Click to Resend</a>
                <br>
            <span class="time"></span>

                <p>
            <span style="color: red;"><%= message%></span>

                </p>
           
          </div>
        </div>

      </div>
    
         
    
      <div class="col-md-2"></div>
  </div>
</div>
<div style="height: 100px;"></div>

<script>

function timer(n){
    document.getElementById('resend').disabled=true;
const interval=setInterval(()=>{

    document.querySelector('.time').innerHTML=`OTP will expire in ${n} seconds`
    --n
    if(n<0){
        clearInterval(interval)
        document.getElementById('resend').disabled=false;
        
    }

},1000)
}

timer(30)

document.getElementById('resend').onclick=function(){
timer(30)
}

</script>

