


<%- include('../layout/formheader.ejs') %>

<div class="pt-3 pb-5 px-sm-5">
  <div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-4 align-self-center">
          <img src="images/p3.png" class="img-fluid" alt="login_image" />
      </div>
    
      <div class="col-md-4">
        
          <form action="forgotPassword" method="post">
              <div class="form-group">
                  <label for="recipient-name" class="col-form-label">Enter Your Email</label>
                  <input type="email" class="form-control" placeholder=" " name="email" id="recipient-name" required="">
              </div>
              <div class="right-w3l"><br>
                  <input type="submit" class="form-control" value="Submit">
              </div>
          </form>
          <% if(message){%>
            <div>
              <p>
              <span style="color: red;"><%= message%></span>
            </p>
              </div>
            <%}else if(text){%>
              <div>
                <p>
                <span style="color: red;"><%- text%></span>
              </p>
                </div>
              <%}
          %>
      </div>
    
         
    
      <div class="col-md-2"></div>
  </div>
</div>
<div style="height: 100px;"></div>

