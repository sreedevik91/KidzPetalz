

<%- include('../layout/formheader.ejs') %>

<div class="pt-3 pb-5 px-sm-5">
  <div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-4 align-self-center">
          <img src="images/p3.png" class="img-fluid" alt="login_image" />
      </div>
    
      <div class="col-md-4">
        
          <form action="login" method="post">
              <div class="form-group">
                  <label for="recipient-name" class="col-form-label">Email</label>
                  <input type="email" class="form-control" placeholder=" " name="email" id="recipient-name" required="">
              </div>
              <div class="form-group">
                  <label class="col-form-label">Password</label>
                  <input type="password" class="form-control" placeholder=" " name="password" required="">
              </div>
              <div class="right-w3l"><br>
                  <input type="submit" class="form-control" value="Login">
              </div>
          </form>

          
          <% if(message){%>
            <div>
              <p>
              <span style="color: red;"><%= message%></span>
            </p>
              </div>
            <%}else if(text){%>
              <div>
                <p>
                <span style="color: red;"><%- text%></span>
              </p>
                </div>
              <%}
          %>
          
          <div><p class="text-center mt-3">or</p></div>

          <div>
            <p class="text-center mt-3">
              <a class="btn btn-success" style="width: 100%;" href="/auth/google">Sign in with Google</a>
            </p>
          
          </div>

          <div>
            <p class="text-center mt-3">Do not have an account?
              <a href="signup" class="text-dark login_btn">
                  Register Now</a>
          </p>
          </div>

          <div>
            <p class="text-center mt-3">
              <a href="forgotPassword" style="color: black;">Forgot Password ?</a>
            </p>
          
        </div>
      </div>
    
         
    
      <div class="col-md-2"></div>
  </div>
</div>
<div style="height: 100px;"></div>

<%- include('../layout/formfooter.ejs') %>