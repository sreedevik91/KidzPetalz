<%-include("../layout/adminHeader.ejs")%>


    <main id="main" class="main">

        <h3><strong>Add User</strong></h3>

        <form action="" method="post" class="mt-5">
            <div class="form-group">
                <label for="recipient-name1" class="col-form-label">Name</label>
                <input type="text" class="form-control" placeholder="Enter Name " name="name" id="recipient-name1" required="">
            </div>
            <div class="form-group">
                <label for="recipient-email" class="col-form-label">Email</label>
                <input type="email" class="form-control" placeholder="Enter Email" name="email" id="recipient-email" required="">
            </div>
            <div class="form-group">
              <label for="recipient-mobile" class="col-form-label">Mobile</label>
              <input type="number" class="form-control" placeholder="Enter Contact Number" name="mobile" id="recipient-mobile" required="">
          </div>
          <div style="display: flex;">
            <div class="form-group">
                <input type="submit" class="btn btn-success mt-4" value="Add User">
            </div>
            <div class="form-group ms-5">
                <a href="user" class="btn btn-primary mt-4" style="width:100px">Cancel</a>
            </div>
        </div>
        </form>

        
        <div>
            <p>
                <span style="color: red;"><%= message %></span>
            </p>
        </div>
    
        
    </main>

    <%-include("../layout/adminFooter.ejs")%>