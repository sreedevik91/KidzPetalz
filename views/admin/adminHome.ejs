                 let categoryChart=null
                    function createCatChart(data) {
                      console.log(data);
                      const cat = document.getElementById('catChart');
                      if(categoryChart!=null){
                        categoryChart.destroy()
                      }
                      categoryChart=new Chart(cat, {
                        type: 'doughnut',
                        data: {
                          labels: data.map((row)=>row._id.category),
                          datasets: [{
                            label: 'Category',
                            data: data.map((row)=>row.price),
                            borderWidth: 1
                          }]
                        },
                        options: {
                          scales: {
                            y: {
                              beginAtZero: true
                            }
                          }
                        }
                      });

                    }

                    function catChart() {
                      $.ajax({
                        url: `/admin/catChartData`,
                        method: 'get',
                        success: (response) => {
