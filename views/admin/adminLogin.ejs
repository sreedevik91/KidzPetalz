<%- include('../layout/formheader.ejs') %>

    <div class="pt-3 pb-5 px-sm-5">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-4 align-self-center">
                <img src="images/p3.png" class="img-fluid" alt="login_image" />
            </div>

            <div class="col-md-4">
                <div style="height: 100px;"></div>
                <form action="/admin" method="post">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Admin Email</label>
                        <input type="email" class="form-control" placeholder=" " name="email" id="recipient-name"
                            required="">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Admin Password</label>
                        <input type="password" class="form-control" placeholder=" " name="password" required="">
                    </div>
                    <div class="right-w3l"><br>
                        <input type="submit" class="form-control" value="Login">
                    </div>
                </form>
                <div>
                    <p>
                        <span style="color: red;"><%=message%></span>
                    </p>
                </div>

                <div>
                    <p class="text-center mt-5">
                      <a href="forgotPassword" style="color: black;">Forgot Password ?</a>
                    </p>
                  
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
        <div style="height: 100px;"></div>
    </div>

<%- include('../layout/formfooter.ejs') %>
