<%-include("../layout/adminHeader.ejs")%>


    <main id="main" class="main">

        <h3><strong>Edit Category</strong></h3>

        <form action="" method="post" class="mt-5" enctype="multipart/form-data">

            <div class="form-group">
                <label for="recipient-name1" class="col-form-label">Title</label>
                <input type="text" class="form-control" placeholder="Enter Category Name " name="title"  value="<%=data.title%>" id="recipient-name1" required="">
            </div>
            <div class="form-group">
                <label for="recipient-desc" class="col-form-label">Description</label>
                <input type="text" class="form-control" placeholder="Enter Description" name="description"  value="<%=data.description%>" id="recipient-desc" required="">
            </div>
            <div class="form-group">
                <label for="recipient-price" class="col-form-label">Price</label>
                <input type="number" class="form-control" placeholder="Enter Category Name " name="price" value="<%=data.price%>" id="recipient-price" required="">
            </div>
            <div class="form-group">
                <label for="recipient-discount" class="col-form-label">Discount</label>
                <input type="text" class="form-control" placeholder="Enter Description" name="discount" value="<%=data.discount%>" id="recipient-discount" required="">
            </div>
            <div class="form-group">
                <label for="recipient-quantity" class="col-form-label">Quantity</label>
                <input type="number" class="form-control" placeholder="Enter Category Name " name="quantity" value="<%=data.quantity%>" id="recipient-quantity" required="">
            </div>
            <div class="form-group">
                <label for="recipient-category" class="col-form-label">Category ID</label>
                <input type="text" class="form-control" placeholder="Enter Description" name="categoryid" value="<%=data.category%>" id="recipient-category" required="">
            </div>

            <div class="form-group">
              <label for="recipient-image" class="col-form-label">Image</label> 

              <%
              for(let i=0; i<data.image.length ; i++){
                %>
               <img src='/categoryImages/<%= data.image[i] %>' alt="<%= data.image[i] %>" width="50 px" height="50 px">
                <%
              }
              %>

              <input type="file" class="form-control" placeholder="Enter Contact Number" name="images" id="recipient-image" required="">
          </div>

          <div class="form-group">
            <input type="radio" value="true" name="verify" required <% if(data.is_listed===true){ %> checked <% } %> >
            <label class="col-form-label">Listed</label>
            <input type="radio" value="false" name="verify" required <% if (data.is_listed===false){ %> checked<% } %> >
            <label class="col-form-label">Unlisted</label>
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" value="<%=data._id%>" name="id" required>
        </div>
          <div style="display: flex;">
            <div class="form-group">
                <input type="submit" class="btn btn-success mt-4" value="Edit Product">
            </div>
            <div class="form-group ms-5">
                <a href="product" class="btn btn-primary mt-4" style="width:100px">Cancel</a>
            </div>
        </div>
        </form>

        
        <div>
            <p>
                <span style="color: red;"><%= message %></span>
            </p>
        </div>
    
        
    </main>

    <%-include("../layout/adminFooter.ejs")%>